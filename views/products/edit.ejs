<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body> 
    <%- include('../partials/header');%> 
    <main>
        
        <form class="cajaLogin" action="/products/<%= locals.product && product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <h3>
                Editar un producto:
            </h3>
            <p>
                <br>
                <label>Nombre del producto</label>
                <input class="ingreso" type="text" name="name" placeholder="Nombre del producto" value="<%= product.name %> ">
                <span class="error"><%= locals.errors && errors.name ? errors.name.msg : '' %> </span> <br><br>
                
                <label>Descripci贸n</label>
                <textarea id="description" class="ingreso" name="description" placeholder="Descripci贸n"><%= product.description %></textarea>
                <span class="error"><%= locals.errors && errors.description ? errors.description.msg : '' %> </span><br><br>
                
                <label>Variedad</label> <br>
                <% for (let i = 0; i < 5; i++) {%> 
                    <input class="id_variety_hidden" type="text" name="id_variety" value="<%= product.variety[i] && product.variety[i].id %>">
                    <input class="ingreso" type="text" name="variety" placeholder="Variedad del producto" value="<%= product.variety[i] && product.variety[i].name %>">
                    <br><br>
                <% } %> 
                
                <label>Presentaci贸n</label>
                <input class="ingreso" type="text" name="presentation"  placeholder="Presentaci贸n" value="<%= product.presentation %>"> 
                <span class="error"><%= locals.errors && errors.presentation ? errors.presentation.msg : '' %> </span><br><br> 

                <label>Rendimiento</label>
                <input class="ingreso" type="text" name="performance"  placeholder="Performance" value="<%= product.performance %>">
                <span class="error"><%= locals.errors && errors.performance ? errors.performance.msg : '' %> </span><br><br>

                <label>Precio</label>
                <input class="ingreso" type="text" name="price" placeholder="Precio" value="<%= product.price %>">
                <span class="error"><%= locals.errors && errors.price ? errors.price.msg : '' %> </span> <br><br>


                <div class="imagenEdit2">
                    <label>Imagen</label>
                    <img class="imagenEdit" name="image" src="/images/products/<%= product.image %>" alt="" id="productImageEdit">
                    
                </div>
                 <p>
                    <br>
                    <label>Agregar una imagen</label>
                    <input class="ingresoCreate fileCreate" type="file" name="image" id="inputProductImageEdit" value="<%= product.image %>">
                    <label class="feedBack"><%= locals.errors && errors.image ? errors.image.msg : '' %> </label><br> 
                </p>
                <p>
                   
                <button type="submit" class="ingreso" id="botonIngreso">Enviar</button>
                <button type="submit" class="ingreso" id="botonCancelar">Cancelar</button>
                   
                    <!--<button type="reset" class="ingreso" id="botonReseteo">Borrar</button>-->
                </p>
            </p>
        </form>
    </main>

    <%- include('../partials/footer') %> 
</body>
</html>